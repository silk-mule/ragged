#include<iostream>
using namespace std;
int main(){
    int row,col;
    cout<<"Enter the number of rows: "<<endl;
    cin>>row;
    cout<<"Enter the number of columns: "<<endl;
    cin>>col;
    int **r = new int*[row];
    for(int i=0; i<row; i++){
        r[i] = new int[col]; 
        for(int j=0; j<col; j++){
            cout<<"Enter the elements of ["<<i<<"]["<<j<<"] :"<<endl;
            cin>>r[i][j];
        }
    }
    for(int i=0; i<row; i++){
        for(int j=0; j<col; j++){
            cout<<r[i][j]<<" ";
        }
        cout<<endl;
    }
    
    
    return 0;
}
